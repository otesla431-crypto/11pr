program AverageOnMainDiagonal;
const
N = 5; // Константа, що визначає розмірність квадратної матриці
var
matrix: array[1..N, 1..N] of integer; // Двовимірний масив для матриці
i, j: integer; // Лічильники для циклів
sum: integer; // Змінна для суми елементів діагоналі
average: real; // Змінна для середнього арифметичного
begin
// Введення елементів матриці з клавіатури
writeln('Введіть елементи матриці ', N, 'x', N, ':');
for i := 1 to N do
for j := 1 to N do
begin
write('Елемент [', i, ',', j, ']: ');
readln(matrix[i, j]); // Зчитування значення від користувача
end;
// Обчислення суми елементів головної діагоналі
4
sum := 0; // Ініціалізація суми нулем
for i := 1 to N do
sum := sum + matrix[i, i]; // Додавання елементів діагоналі
// Обчислення середнього арифметичного
if N > 0 then
average := sum / N // Якщо N > 0, ділимо суму на N
else
average := 0; // На нуль не ділимо
// Виведення результату
writeln('Середнє арифметичне елементів головної діагоналі: ', average:0:2);
end.